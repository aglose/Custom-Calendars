<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HorizontalCalendarView">

        <!-- Behaviour attributes -->
        <attr name="displayDayOfWeek" format="boolean"/>
        <attr name="hideHeader" format="boolean"/>
        <attr name="hideCalendar" format="boolean"/>
        <attr name="showTimeInHeader" format="boolean"/>
        <attr name="showCalendarIcon" format="boolean"/>
        <attr name="showCalendarArrowIcon" format="boolean"/>
        <attr name="selectTodayOnLoad" format="boolean"/>
        <attr name="alwaysDisplayMonth" format="boolean"/>

        <!-- Days Container styling -->
        <attr name="daysContainerBackgroundColor" format="color"/>

        <attr name="dayTextColor" format="color"/>
        <attr name="selectDayTextColor" format="color"/>
        <attr name="selectDayBackgroundColor" format="color"/>

        <!-- Day View styling -->
        <attr name="dayOfWeekTextColor" format="color" />
        <attr name="dayNumberTextColor" format="color" />
        <attr name="monthNameTextColor" format="color" />

    </declare-styleable>
</resources>